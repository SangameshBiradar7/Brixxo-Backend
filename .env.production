# Production Environment Configuration
# NODE_ENV is automatically set by Vercel/platform

# Backend Configuration
PORT=5000
BACKEND_URL=https://api.dreamhouse.com

# Database
MONGO_URI=mongodb://admin:changeme123@mongo:27017/dreambuild?ssl=false&replicaSet=rs0
MONGO_ROOT_PASSWORD=changeme123

# Redis Cache
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRE=7d

# Frontend Configuration
NEXT_PUBLIC_BACKEND_URL=https://api.dreamhouse.com
NEXT_PUBLIC_FRONTEND_URL=https://dreamhouse.com

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=30d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# CDN Configuration
CDN_URL=https://cdn.dreamhouse.com
CDN_ENABLED=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/ssl-cert.pem
SSL_KEY_PATH=/etc/ssl/private/ssl-cert.key

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/dreamhouse/app.log

# Performance
COMPRESSION_LEVEL=6
CACHE_TTL=3600
SESSION_TIMEOUT=86400000