# Production Environment Variables for Render Deployment
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=10000
NODE_ENV=production

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dreambuild?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (your Vercel deployment URL)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Redis (optional - for caching)
REDIS_URL=redis://username:password@redis-host:6379

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Configuration (optional)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Settings
CORS_ORIGIN=https://your-vercel-app.vercel.app

# Cloudinary (for image storage - optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Monitoring (optional)
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=30d

# Security
BCRYPT_ROUNDS=12

# CDN Configuration (optional)
CDN_URL=https://your-cdn-url.com
CDN_ENABLED=true

# SSL Configuration (Render handles this automatically)
# SSL_CERT_PATH=/etc/ssl/certs/ssl-cert.pem
# SSL_KEY_PATH=/etc/ssl/private/ssl-cert.key

# Logging
LOG_LEVEL=info